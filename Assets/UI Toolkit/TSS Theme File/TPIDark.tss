@import url("/Assets/VELCRO UI/UnityThemes/Dark.tss");

@import url("/Assets/TPI UI/StyleSheets/tpi-activity-log.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-inspection-log.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-inspection-review.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-inspection-window.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-menu-buttons.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-tab-content.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-start-Info-window.uss");
@import url("/Assets/TPI UI/StyleSheets/tpi-fade.uss");


:root {
    /* Menu Buttons*/
    --menu-icon-settings-image: url("../../VELCRO UI/Sprites/Icons/Settings_Sprite.png");
    --menu-icon-pause-image: url("../../Art/Sprite/Icons/Pause_Sprite.png");
    --menu-icon-inspection-image: url("../../Art/Sprite/Icons/InspectionReview_Sprite.png");

    /* Inspection Review */
    --empty-container-icon-colour: #B3B3B3;
    --empty-container-label-colour: #DCDCDC;
    --acitve-button-background-colour: #FFFFFF;
    --active-button-colour: #000000;
    --active-button-backgound-image-colour: #757575;
    --inactive-button-colour: #FFFFFF;
    --inacitve-button-background-colour: #757575;
    --filter-tag-default-background-color: #757575;
    --filter-tag-default-border-color: #FFFFFF;
    --filter-tag-default-text-color: #FFFFFF;
    --filter-tag-selected-background-color: #FFC009; 
    --filter-tag-selected-border-color: #FFFFFF;
    --filter-tag-selected-text-color: #000000;
    --inspection-log-compliant-checkmark-icon: url("../../VELCRO UI/Sprites/Checkmarks/CheckmarkInCircle_Sprite.png");
    --inspection-log-non-compliant-checkmark-icon: url("../../VELCRO UI/Sprites/Icons/Warning_Sprite.png");
   

    /* Inspection Review Activity Log */
    --activity-log-foldout-text-colour: #FFFFFF;
    --activity-log-foldout-text-colour-selected: #FFC009;
    --activity-log-foldout-image: url("../../Art/Sprite/Icons/plus-square.png");
    --activity-log-foldout-image-selected: url("../../Art/Sprite/Icons/dash-square.png");

    /* Inspection Window */
    --inspection-window-body-background: #000000;
    --inspection-window-body-flash-colour: rgba(255, 255, 255, 0.4);
    --inspection-window-body-photo-frame-image: url("../../Art/Sprite/PhotoFrame_Sprite.png");

    /* Information Dialog window */
    --information-dialog-image-background: url("../../VELCRO UI/Sprites/Icons/Success_Sprite.png");
    --information-dialog-image-background-colour: #4BC17E;

    /* Image Gallery */
    --image-gallery-row-label-colour: #FFFFFF;

    /* Inspection Message */
    --inspection-message-background-colour: #B3B3B3;
    --inspection-message-border-colour: #FFFFFF;
    --inspection-message-text-colour: #000000;
    --inspection-message-icon-tint: #D9D9D9;
    --inspection-message-icon: url("../../Art/Sprite/Icons/SpeechBubble_Sprite.png");

    /* Start Info Window */
    --start-info-window-label-colour: #FFFFFF;
    --info-icon-background-color: #63706e;

    /* Fade in/out */
    --fade-background-colour: #000000;
}
