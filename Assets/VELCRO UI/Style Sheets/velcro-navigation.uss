.navigation {
    height: 223px;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: var(--navigation-default-background-color);
}

.buttongroup {
    width: 395px;
    height: 90px;
    background-color: var(--navigation-button-background-color);
    border-width: 0;
    justify-content: space-between;
    padding: 0;
    margin: 0;
    align-items: center;
}

.bottombar {
    height: 1px;
    width: 100%;
    background-color: var(--navigation-bottom-bar-default-color);
    align-self: flex-end;
}

.content-container {
    width: 339px;
    height: 79px;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: var(--navigation-button-background-color);
    border-color: var(--navigation-button-background-color); 
    border-width: 0;
    border-radius: 10px;
}

.content-label {
    -unity-font-definition: var(--lato-regular);
    font-size: 24px;
    color: var(--navigation-default-item-color);
    max-width: 250px;
    height: 22px;
    overflow: hidden;
    padding: 0;
    margin: 0;
}

.content-icon {
    -unity-background-image-tint-color: var(--navigation-default-item-color);
    min-width: 24px;
    min-height: 24px;
    max-width: 32px;
    max-height: 32px;
    margin-right: 10px;
}

.buttongroup:hover:enabled {
    background-color: var(--navigation-button-background-color);
}

.buttongroup:hover:enabled > .content-container {
    background-color: var(--navigation-hover-item-background-color);
    border-width: 1px;
}

.buttongroup-selected > .content-container > .content-label {
    color: var(--navigation-selected-item-color);
}

.buttongroup-selected > .content-container > .content-icon {
    -unity-background-image-tint-color: var(--navigation-selected-item-color);
}

.buttongroup-selected > .bottombar {
    height: 9px;
    background-color: var(--navigation-selected-item-color);
}