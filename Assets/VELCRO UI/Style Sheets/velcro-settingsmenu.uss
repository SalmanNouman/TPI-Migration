/* ===============================================
Settings menu shared classes
=============================================== */  
.settings-menu-canvas {
	background-color: var(--canvas-dim-colour);
}

.settings-menu-btn-close-container {
    right: 25px;
    top: 50px;
}

.body-simple {
    margin-left: 80px;
    margin-right: 80px;
}

.body-label {
    color: var(--settings-menu-secondary-text-colour);
}

.body-slidecontainer {
    width: 300px;
    height: 40px;
}



/* ===============================================
Settings menu simple classes
=============================================== */  
.settings-menu-simple {
    width: 850px;
    height: 500px;
    background-color: var(--settings-menu-background-colour);
}



/* ===============================================
Settings menu complex classes
=============================================== */  
.settings-menu-complex {
    width: 1080px;
    height: 747px;
    background-color: var(--settings-menu-background-colour);
}

.body-complex {
    margin-left: 80px;
    margin-right: 80px;
    margin-bottom: 80px;
}

.body-volume-down {
    width: 28px;
    height: 100%;
    -unity-background-scale-mode: scale-to-fit;
    background-image: var(--settings-menu-volume-off-sprite);
    -unity-background-image-tint-color: var(--settings-menu-secondary-icon-colour);
}

.body-volume-up {
    width: 34px;
    height: 100%;
    -unity-background-scale-mode: scale-to-fit;
    background-image: var(--settings-menu-volume-full-sprite);
    -unity-background-image-tint-color: var(--settings-menu-secondary-icon-colour);
}

.body-speed-down {
    width: 44px;
    height: 100%;
    -unity-background-scale-mode: scale-to-fit;
    background-image: var(--settings-menu-tortoise-sprite);
    -unity-background-image-tint-color: var(--settings-menu-secondary-icon-colour);
}

.body-speed-up {
    width: 34px;
    height: 100%;
    -unity-background-scale-mode: scale-to-fit;
    background-image: var(--settings-menu-rabbit-sprite);
    -unity-background-image-tint-color: var(--settings-menu-secondary-icon-colour);
}

.body-dot-container {
    top: 29px;
    padding-left: 4px;
    padding-right: 4px;
    height: 15px;
}

.body-dot {
    width: 4px;
    background-color: var(--settings-menu-mouse-sensitivity-dot-colour);
}